@model PostViewModel

<div class="text-center">
  <h1 class="display-4">Latest Posts</h1>
</div>

<hr>
<div class="container">

<div class="display-6">
  <div class="">
    <a class="btn btn-primary " asp-controller="Posts" asp-action="NewPost">New Post</a>
  </div>
</div>


  <div class=" display-6 row justify-content-center">
    <div class=" col-xl-6 col-lg-8 col-md-8 col-sm-10">
      <div>

                @foreach (var p in Model.PostList)
                {
            <div class="post">
              <h2>
                <a class="btn btn-warning"
                  asp-area=""
                  asp-controller="Posts"
                  asp-action="ViewPost"
                  asp-route-id="@p.Id"
                  >@p.Title</a
                  
                >
              </h2>
              <h5 class="display-12">Created at @p.UpdatedAt</h5>
              <p class="text-muted">@p.Body</p>
            </div>
                }
      </div>
    </div>
  </div>
</div>



